<h1>Registration</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :fullname %><div></div>
    <%= f.text_field :fullname, class: 'form-control form-content', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control form-content', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control form-content', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'form-control form-content', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :organisation %>
    <%= f.text_field :organisation, class: 'form-control form-content', required: false %>
  </div>
  <div class="form-group">
    <%= f.radio_button :gender, 'M', checked: true %>Male
    <%= f.radio_button :gender, 'F' %>Female
 </div>
 <div class="form-group">
    <%= f.label :age %>
    <%= f.text_field :age, class: 'form-control form-content', required: false %>
  </div>
 <%= f.submit 'Register', class: 'btn btn-primary btn-lg' %>
<% end %>