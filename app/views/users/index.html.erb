<div class="container">

  <ul class="nav nav-tabs">
    <li class="active"><a href="#">Manage Users</a></li>
    <li><a href="#">Manage Masters Data</a></li>
    <li><a href="#">Manage Articles</a></li>
    </ul>
    <div class="panel panel-default panelforContent">
    <div class="panel-body">
        <div class="container">
          <table class="table table-hover contentTable">
            <thead>
              <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Organisation</th>
                <th>Role</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= user.fullname %></td>
                <td><%= user.email %></td>
                 <td>
                   <% if user.organisation == '' %>
                     not provided
                   <% else %>   
                  <%= user.organisation %>
                      <% end %>  
                    </td>
                <td>
                   <% if user.roleID == 4 %>
                     Admin
                   <% elsif user.roleID == 3  %>
                     Moderator
                   <% elsif user.roleID == 2 %>
                     Analyst
                   <% elsif user.roleID == 1 %>
                     User
                  <% end %>   
                    
                    <!--<div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">Admin
                        <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                              <li><a href="#">Admin</a></li>
                              <li><a href="#">Moderater</a></li>
                              <li><a href="#">Analyst</a></li>
                              <li><a href="#">User</a></li>
                            </ul>
                          </div>-->
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
       <!--<button type="button" class="btn btn-success">Save</button>-->
    </div>
  </div>
</div>